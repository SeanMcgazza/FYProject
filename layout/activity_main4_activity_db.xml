<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.sean.fyapp.Main4ActivityDB" android:background="#670606">

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Data"
            android:id="@+id/update" android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Exercise"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="48dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="REPS"
            android:id="@+id/textView3" android:layout_below="@+id/textView" android:layout_alignParentStart="true"
            android:layout_marginTop="37dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Out of 10"
            android:id="@+id/textView4" android:layout_below="@+id/textView3" android:layout_alignParentStart="true"
            android:layout_marginTop="39dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Name"
            android:layout_alignBottom="@+id/textView" android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/update" android:background="#ffffff"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Reps" android:layout_above="@+id/textView4"
            android:layout_alignStart="@+id/Name" android:layout_alignEnd="@+id/Name" android:background="#ffffff"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Rate" android:layout_alignBottom="@+id/textView4"
            android:layout_alignStart="@+id/Reps" android:layout_alignEnd="@+id/Reps" android:background="#ffffff"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Data"
            android:id="@+id/View" android:layout_alignBottom="@+id/update" android:layout_toEndOf="@+id/update"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update DB"
            android:id="@+id/updb" android:layout_above="@+id/update" android:layout_alignParentStart="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ID"
            android:id="@+id/textView5" android:layout_centerVertical="true" android:layout_alignParentStart="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ID" android:layout_centerVertical="true" android:layout_alignStart="@+id/Rate"
            android:layout_alignParentEnd="true" android:background="#ffffff"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:id="@+id/Delete" android:layout_alignBottom="@+id/updb" android:layout_toEndOf="@+id/updb"/>
</RelativeLayout>
